@model FormOnline.Models.Answer

@{
    ViewBag.Title = "Create";
}

<h3>Ajouter une nouvelle réponse</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Answer</legend>

        @Html.HiddenFor(model => model.QuestionId)
        @Html.ValidationMessageFor(model => model.QuestionId)

        <div class="form-group">
            <b>Libellé de la réponse</b>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.AnswerLabel)
            @Html.ValidationMessageFor(model => model.AnswerLabel)
        </div>

        <p>
            <input type="submit" value="Ajouter" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à la liste des réponses", "Index", "Answer", "", "")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
