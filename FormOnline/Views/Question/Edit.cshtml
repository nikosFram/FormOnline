@model FormOnline.Models.Question

@{
    ViewBag.Title = "Edit";
}

<h3>Modifier une question</h3>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Question</legend>

        @Html.HiddenFor(model => model.QuestionId)

        <div class="form-group">
            @*@Html.LabelFor(model => model.FormId)*@
            @*Id du formulaire*@
        </div>
        <div class="form-group">
            @*@Html.EditorFor(model => model.FormId)
            @Html.ValidationMessageFor(model => model.FormId)*@
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.QuestionLabel)*@
            <b>Libellé de la question</b>
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.QuestionLabel)
            @Html.ValidationMessageFor(model => model.QuestionLabel)
        </div>

        <p>
            <input type="submit" value="Sauvegarder" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à la liste des questions", "Index", "Question","","")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
