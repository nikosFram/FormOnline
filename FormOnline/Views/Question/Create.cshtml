@model FormOnline.Models.Question

@{
    ViewBag.Title = "Create";
}

<h3>Création d'une question</h3>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Question</legend>

        @Html.HiddenFor(model => model.FormId)
        @Html.ValidationMessageFor(model => model.FormId)

        <div class="form-group">
           <b></b> Libellé de la question
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.QuestionLabel)
            @Html.ValidationMessageFor(model => model.QuestionLabel)
        </div>

        <p>
            <input type="submit" value="Ajouter" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour au formulaire", "Details", "Data", new { id = Model.FormId }, "")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
