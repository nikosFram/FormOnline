@model FormOnline.Models.Form

@{
    ViewBag.Title = "Create";
}

<h3>Création d'un nouveau formulaire</h3>
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Form</legend>

        <div class="form-group">
            <b>Titre</b>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="form-group">
            <b>Description</b>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="form-group">
            <b>Date de clôture</b>
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.ClosingDate)
            @Html.ValidationMessageFor(model => model.ClosingDate)
        </div>

        <p>
            <input type="submit" value="Ajouter un nouveau formulaire" class="btn btn-default" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Retour à liste des formulaires", "Index", "Data")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
